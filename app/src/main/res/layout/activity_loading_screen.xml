            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rsa9egb5oqcb_rl"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                >
                <ImageView
                    android:id="@+id/rsa9egb5oqcb"
                    android:layout_width="match_parent"
                    android:layout_height="800dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:paddingTop="296dp"
                    android:paddingBottom="307dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ry4qln0kqv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp"
                        android:layout_marginHorizontal="51dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rynsjjnmhxw"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sync Your"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/rguep9718dbm"
                            android:textColor="#F8F8F8"
                            android:textSize="32sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="\n steps "
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/rk2jr6fj8vtq"
                        android:textColor="#F8F8F8"
                        android:textSize="32sp"
                        android:layout_marginBottom="51dp"
                        android:layout_marginStart="22dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Transform Your Life"
                        />
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r95x9a8bldpb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/cr15bebfcff1c"
                        android:paddingVertical="15dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginHorizontal="76dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rroedxboc5cn"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sign in"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/ry3jsu667bz"
                        android:textColor="#F8F8F8"
                        android:textSize="14sp"
                        android:layout_marginStart="110dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Create an account"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>