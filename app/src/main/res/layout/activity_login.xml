<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/rz1xjuuqz4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/r1qjquk1vo36"
                android:layout_width="368dp"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rikvg0t9izk"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:id="@+id/r2tt53low6eu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s5e27fdsw1bd9d9d9"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:layout_marginTop="-50dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rwaeo1a8wz9"
                        android:textColor="#FF9A01"
                        android:textSize="34sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Welcome"/>

                    <TextView
                        android:id="@+id/rfxibhdbwkwj"
                        android:textColor="#131313"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="41dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Please enter your details."/>

                    <TextView
                        android:id="@+id/r3wxf0g4qo0k"
                        android:textColor="#FF9A01"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="44dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Email"/>

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="274dp"
                        android:layout_height="43dp"
                        android:background="@drawable/s00000040sw1cr12bc4c4c4"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="23dp"
                        android:layout_gravity="center_horizontal"
                        android:elevation="10dp"
                        android:hint="Enter your email"
                        android:textColor="#131313"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/rerd311sia4l"
                        android:textColor="#FF9A01"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="44dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Password"/>

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="274dp"
                        android:layout_height="43dp"
                        android:background="@drawable/s00000040sw1cr12bc4c4c4"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="23dp"
                        android:layout_gravity="center_horizontal"
                        android:elevation="10dp"
                        android:hint="Enter your password"
                        android:textColor="#131313"
                        android:textSize="14sp"
                        android:inputType="textPassword"/>

                    <LinearLayout
                        android:id="@+id/remt8unnqftu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp"
                        android:layout_marginHorizontal="43dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/remember_me_checkbox"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="7dp"
                            android:buttonTint="#131313"/>

                        <TextView
                            android:id="@+id/rwp66w71jljm"
                            android:textColor="#131313"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Remember me"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/r1yl2ascmxch"
                            android:textColor="#FF9A01"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Forgot password?"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#FF9A01"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:text="Login"
                        android:layout_marginHorizontal="75dp"
                        android:layout_marginBottom="19dp"/>

                    <TextView
                        android:id="@+id/rbr4x9lnqs6t"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Don't have an account? Sign up"
                        android:textColor="#FF9A01"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
