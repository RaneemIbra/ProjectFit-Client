<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/rz1xjuuqz4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/r1qjquk1vo36"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rikvg0t9izk"
                    android:layout_width="414dp"
                    android:layout_height="298dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:id="@+id/r2tt53low6eu"
                    android:layout_width="match_parent"
                    android:layout_height="504dp"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/s5e27fdsw1bd9d9d9"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp">

                    <TextView
                        android:id="@+id/rwaeo1a8wz9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="Welcome"
                        android:textColor="#FF9A01"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/rfxibhdbwkwj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="30dp"
                        android:text="Please enter your details."
                        android:textColor="#131313"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/r3wxf0g4qo0k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:layout_marginBottom="6dp"
                        android:text="Email"
                        android:textColor="#FF9A01"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="292dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="23dp"
                        android:background="@drawable/s00000040sw1cr12bc4c4c4"
                        android:elevation="10dp"
                        android:hint="Enter your email"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#131313"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rerd311sia4l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:layout_marginBottom="6dp"
                        android:text="Password"
                        android:textColor="#FF9A01"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="292dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="23dp"
                        android:background="@drawable/s00000040sw1cr12bc4c4c4"
                        android:elevation="10dp"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textColor="#131313"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/remt8unnqftu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="43dp"
                        android:layout_marginBottom="18dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/remember_me_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="7dp"
                            android:buttonTint="#131313" />

                        <TextView
                            android:id="@+id/rwp66w71jljm"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="Remember me"
                            android:textColor="#131313"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/password_restTxt"
                            android:clickable="true"
                            android:onClick="goToResetPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forgot password?"
                            android:textColor="#FF9A01"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="75dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#FF9A01"
                        android:text="Login"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/signUp_text"
                        android:clickable="true"
                        android:onClick="goToRegisterPage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="Don't have an account? Sign up"
                        android:textColor="#FF9A01"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
