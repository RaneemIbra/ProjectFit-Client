<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D9D9D9"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Back Button at the top of the layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Back"
            android:onClick="onBackClicked"
            android:src="@drawable/back"
            android:layout_marginBottom="20dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="25dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_states"
            android:visibility="visible" />

        <TextView
            android:id="@+id/r5xj3hlxt1bn"
            android:layout_width="380dp"
            android:layout_height="87dp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="What Is Your Goal?"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_shape"
            android:onClick="onAnswerClicked"
            android:orientation="vertical"
            android:paddingHorizontal="31dp"
            android:paddingVertical="18dp">

            <TextView
                android:id="@+id/r2xsp1kiqkjb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lose weight"
                android:textColor="@color/light_gray_font"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_shape"
            android:onClick="onAnswerClicked"
            android:orientation="vertical"
            android:paddingHorizontal="31dp"
            android:paddingVertical="18dp">

            <TextView
                android:id="@+id/r1tdqimeueqb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gain weight"
                android:textColor="@color/light_gray_font"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_shape"
            android:onClick="onAnswerClicked"
            android:orientation="vertical"
            android:paddingHorizontal="31dp"
            android:paddingVertical="18dp">

            <TextView
                android:id="@+id/rwpng9giys2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscle Mass Gain"
                android:textColor="@color/light_gray_font"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/edit_text_shape"
            android:onClick="onAnswerClicked"
            android:orientation="vertical"
            android:paddingHorizontal="31dp"
            android:paddingVertical="18dp"
            android:visibility="visible"> <!-- Set visibility to "invisible" for 3-answer questions -->

            <TextView
                android:id="@+id/rap0qk253qrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shape body"
                android:textColor="@color/light_gray_font"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/r9i96idg3y5l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="91dp"
            android:background="@drawable/button_selector"
            android:enabled="false"
            android:gravity="center"
            android:hint="Continue"
            android:onClick="onContinueClicked"
            android:paddingVertical="13dp"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Progress Bar -->

    <!-- Question Title -->

    <!-- Answer Options -->

    <!-- Continue Button -->
</LinearLayout>
