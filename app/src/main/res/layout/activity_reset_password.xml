<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rnzp0rrhsbyj"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E6E6E6"
        android:paddingTop="100dp"
        android:paddingBottom="254dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rj79xpfhlhoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="46dp"
                android:text="Reset Password"
                android:textColor="#FF9A01"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="326dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="43dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/s00000040sw1cr12bc4c4c4"
                android:elevation="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/email_icon"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/email_txt"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:hint="Enter your email"
                    android:textColorHint="#FF9A01"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/security_question_layout"
                android:layout_width="326dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="43dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/s00000040sw1cr12bc4c4c4"
                android:elevation="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/security_question_icon"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_layout"
                android:layout_width="326dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="43dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/s00000040sw1cr12bc4c4c4"
                android:elevation="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/password_icon"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/password_txt"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:hint="New password"
                    android:textColorHint="#FF9A01"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/confirmed_password_layout"
                android:layout_width="326dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="43dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/s00000040sw1cr12bc4c4c4"
                android:elevation="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/confirmed_password_icon"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/confirmed_password_txt"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:hint="Comfirmed password"
                    android:textColorHint="#FF9A01"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/Reset_button"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:background="@drawable/cr20bff9a01cf"
                android:text="Reset"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>