<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rhe1iuv1uvi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sffffffsw1cr20bd9d9d9"
        android:paddingTop="23dp"
        android:paddingBottom="-52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r2vtl65tp5h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/homePageBtn"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="HOME"
                    android:gravity="center"
                    android:background="@drawable/custom_button_white"
                    android:paddingVertical="11dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="0dp"
                    android:stateListAnimator="@null" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/plan"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s000000sw1cr38bff9a01"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:paddingVertical="11dp"
                    android:text="PLAN"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/profile"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="PROFILE"
                    android:gravity="center"
                    android:background="@drawable/s000000sw1cr38bffffff"
                    android:paddingVertical="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rsumx2xn2gl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="7dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rkhm7whceym"
                    android:textColor="#131313"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="167dp"
                    android:text="My Plan"
                    android:gravity="center"
                    android:background="@drawable/s000000sw1cr38bffffff"
                    android:paddingVertical="13dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/workouts"
                    android:textColor="#131313"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="167dp"
                    android:text="Workouts"
                    android:gravity="center"
                    android:background="@drawable/s000000sw1cr38bff9a01"
                    android:paddingVertical="13dp"
                    android:elevation="4dp" />

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/WorkoutImage"
                app:shapeAppearanceOverlay="@style/cr20"
                android:layout_width="match_parent"
                android:layout_height="407dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="1dp"
                android:src="@drawable/benchpress"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/WorkoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bench Press"
                android:textColor="#000000"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/r492qk93xeya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/s000000sw1cr20bff9a01"
                android:paddingTop="33dp"
                android:paddingBottom="66dp"
                android:paddingHorizontal="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WorkoutDescription"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Bench press workouts are a staple in many strength training routines — it’s a dynamic, functional movement that works several muscles at once, including:

Front deltoids and pectorals (chest muscles)
Shoulders
Biceps
Triceps
While the bench press is a simple movement, it’s highly effective for strengthening the chest and shoulders — and it can be easily modified to work different muscles with various grips and positions"/>
                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </WebView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
