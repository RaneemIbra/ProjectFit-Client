<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#131313"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rsk9j6nftt2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="29dp"
        android:gravity="center"
        android:paddingBottom="59dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Row for Home, Plan, Profile -->
            <LinearLayout
                android:id="@+id/rtaly5bnlpv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="11dp"
                    android:text="Home"
                    android:textColor="#131313"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_plan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="11dp"
                    android:text="Plan"
                    android:textColor="#131313"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="11dp"
                    android:text="Profile"
                    android:textColor="#131313"
                    android:textSize="17sp"/>
            </LinearLayout>

            <!-- Row for Build My Plan, Workouts -->
            <LinearLayout
                android:id="@+id/rh7vy2rivfgh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="7dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_build_my_plan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="13dp"
                    android:text="Build My Plan"
                    android:textColor="#131313"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_workouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#C1C0B7"
                    android:paddingVertical="13dp"
                    android:text="Workouts"
                    android:textColor="#131313"
                    android:textSize="17sp"/>
            </LinearLayout>

            <!-- Filter By Section -->
            <TextView
                android:id="@+id/rvphm7dat9s"
                android:textColor="#C1C0B7"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="29dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Filter By:"/>

            <!-- Filter By Type -->
            <TextView
                android:id="@+id/ruzpxnhk9ju"
                android:textColor="#C1C0B7"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="42dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="By Type"/>

            <LinearLayout
                android:id="@+id/rve8oh7d12cba"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_bodyBuilding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="Bodybuilding"
                    android:textColor="#131313"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_Mobility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="Mobility"
                    android:textColor="#131313"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/calisthenics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="calisthenics"
                    android:textColor="#131313"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Filter By Duration -->
            <TextView
                android:id="@+id/rtllvs8vputk"
                android:textColor="#C1C0B7"
                android:textSize="20sp"
                android:layout_marginBottom="33dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="By Duration"/>

            <LinearLayout
                android:id="@+id/r7v80ufi7nnj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="41dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_30_minutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="30 Minutes"
                    android:textColor="#131313"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_60_minutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="60 Minutes"
                    android:textColor="#131313"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_90_minutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="90 Minutes"
                    android:textColor="#131313"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Filter By Body Part -->
            <TextView
                android:id="@+id/rh9sec0zskss"
                android:textColor="#C1C0B7"
                android:textSize="20sp"
                android:layout_marginBottom="26dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="By Body Part:"/>

            <LinearLayout
                android:id="@+id/rve8oh7d12cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_chest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="Chest"
                    android:textColor="#131313"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="Back"
                    android:textColor="#131313"
                    android:textSize="13sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_legs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9A01"
                    android:paddingVertical="45dp"
                    android:text="Legs"
                    android:textColor="#131313"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
