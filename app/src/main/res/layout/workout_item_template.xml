<!-- workout_item_template.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/cr18bffffff"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingVertical="9dp">

    <LinearLayout
        android:id="@+id/rv4ymb3kdafea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="19dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Workout Image and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Workout Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rlaob0eufl3a"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/building" />

            <!-- Workout Name and Calories Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Workout Name -->
                <TextView
                    android:id="@+id/r58ginjerv5oa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Upper Body Workout"
                    android:textColor="#131313"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Calories Image and Amount -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rhh070fllio8a"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calories" />

                    <TextView
                        android:id="@+id/rqd9c60hxzfa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="122 Kcal"
                        android:textColor="#212020"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Next Set Info -->
                <TextView
                    android:id="@+id/rg5slbkteo9wa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="The next set is 4 reps!"
                    android:textColor="#FF9A01"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Timer Image and Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rb39xm020i8a"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/timer" />

                <TextView
                    android:id="@+id/rc5h6rvwtrkra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="25 Mins"
                    android:textColor="#007AFF"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Set Completion Info -->
        <TextView
            android:id="@+id/ra3jfriwglta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="When a set is completed, tap on the progress bar"
            android:textColor="#007AFF"
            android:textSize="13sp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/training_progress_bar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:max="160"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_custom" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/setsCompleted2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="18dp"
            android:text="0/10"
            android:textColor="#131313" />
    </LinearLayout>

    <!-- Completed Sets -->
</LinearLayout>